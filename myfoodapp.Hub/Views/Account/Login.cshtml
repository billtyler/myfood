@using myfoodapp.Hub.Models
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<style>
	.bg {
		background-image: url(/Content/Pictures/login-bg.png);
	}
	.logo {
		text-align: center;
		margin-top: 45px;
	}
	.logo-name{
		width: 100%;
		height: auto;
	}
	.form-horizontal{
		border-radius: 5px;
		border: 2px solid white;
		padding: 10%;
		background-color: white;
		margin-top: 45px;
		position: relative;
	}
	.signin-text{
		text-transform: uppercase;
		text-align: center;
		font-size: 32px;
		margin-bottom: 30px;
	}
	.btn-login {
		background-color: #47a447;
		text-transform: uppercase;
		font-size: 18px;
		border: 0;
		height: 40px;
		color: white;
		width: 100%;
	}
	.text-danger{
		font-weight: bold;
		margin-top: 5px;
		margin-bottom: 5px;
		display:block;
		font-size: 14px;
	}
	.remember {
		font-size: 14px;
	}

	.row-offcanvas-left, .container-fluid {
		height: 100%;
	}
	#main-section {
		height: 100%;
		background-image: url(/Content/Pictures/login-bg.png);
	}
	@@media (max-width: 390px) {
		.signin-text{
			font-size: 26px;
		}
	}

</style>


<section class="bg">
	<div class="col-md-4 col-md-offset-4">
		<div class="logo">
			<img class="logo-name" src="~/Content/logoMyfood.png" />
		</div>
		<div>
			@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<p class="signin-text">[[[Please Sign In]]]</p>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
				@Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control text-b" })
				@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
			
		</div>
		<div class="form-group">
				@Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control text-b" })
				@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
					@Html.CheckBoxFor(m => m.RememberMe)
					@Html.LabelFor(m => m.RememberMe, new { @class="remember" })
		</div>
		<div class="form-group">
				<input type="submit" value="[[[Log in]]]" class="btn btn-login" />
		</div>


		@*< p >
		@Html.ActionLink("Register as a new user", "Register")
	</ p > *@
		@*Enable this once you have account confirmation enabled for password reset functionality
	< p >
		@Html.ActionLink("Forgot your password?", "ForgotPassword")
	</ p > *@

				}
		</div >
	</div >
</section >



