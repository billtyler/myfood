<!DOCTYPE html>
<html>
<head>
    <title>myfood Hub Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.metro.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.metro.mobile.min.css" rel="stylesheet" />

    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/cultures/kendo.culture.fr-FR.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async='async'></script>
    <script src="~/Scripts/jquery.fancybox.min.js"></script>

    <link rel="stylesheet" href="~/fonts/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/jquery.fancybox.min.css" />

    <link rel="stylesheet" href="~/Content/Swiper/swiper.min.css">
    <script src="~/Scripts/Swiper/swiper.jquery.js"></script>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon" />
    <link rel="manifest" href="~/manifest.txt">
</head>
<body>
    @using Microsoft.AspNet.Identity
  
    <!-- End Google Tag Manager -->
    @*<div class="container-fluid" style="background-color:aqua">

        <!--open container-->
        <div  class="row row-offcanvas row-offcanvas-left" style="background-color:orangered">
            <!--open row-->*@
    <div id="nav-section" class="col-md-12 column">
        <!--open nav column-->
        <div class="navbar-default">
            <button id="toggle-button" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <h1 id="dash-logo" class="center-block" style="font-size: 20px">
            <a href="@(Url.Action("Index", "Home"))">
                <img height="60" src="~/Content/logoMyfood.png" />
            </a>
        </h1>
        <div class="collapse navbar-collapse" id="sidebar-nav" role="navigation">
			<ul class="nav">
				@if (Request.IsAuthenticated)
				{
					@*if (User.IsInRole("Admin"))
					{
						<li><a href="@(Url.Action("Index", "Admin"))"><i class="fa fa-address-card" aria-hidden="true"></i>&nbsp; [[[User Management]]]</a></li>
					}*@
					if (User.IsInRole("Admin"))
					{
						<li><a href="@(Url.Action("Index", "Messages"))"><i class="fa fa-comment" aria-hidden="true"></i>&nbsp; [[[Messages]]]</a></li>
						<li><a href="@(Url.Action("Index", "Measures"))"><i class="fa fa-thermometer-full" aria-hidden="true"></i>&nbsp; [[[Measures]]]</a></li>
						<li><a href="@(Url.Action("Index", "ProductionUnits"))"><i class="fa fa-building-o" aria-hidden="true"></i>&nbsp; [[[Production Units]]]</a></li>
						<li><a href="@(Url.Action("Index", "PerformanceHealth"))"><i class="fa fa-tachometer" aria-hidden="true"></i>&nbsp; [[[Performance &amp; Health]]]</a></li>
					}
					<li><a href="@(Url.Action("Index", "Recipes"))"><i class="fa fa-book" aria-hidden="true"></i>&nbsp; [[[Recipes]]]</a></li>
					<li><a href="@(Url.Action("Update", "MyInfo"))"><i class="fa fa-id-card" aria-hidden="true"></i>&nbsp; [[[My Information]]]</a></li>
				}

				@if (User.IsInRole("Admin"))
				{
				<li id="About"><a href="@(Url.Action("Index", "About"))"><i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp; [[[About]]]</a></li>
				}

				@if (Request.IsAuthenticated)
				{
					using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav" }))
				{
			@Html.AntiForgeryToken()
			<li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out" aria-hidden="true"></i>&nbsp; [[[Log off]]]</a></li>
}
}
else
{
			<li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp; [[[Login]]]</a></li>
}
			</ul>
			<div id="rights">
				<img width="50" height="60" src="~/Content/miniLogo.png" />
				<p>.:myfoodapphub is licensed under a GPLv3:.</p>
			</div>
		</div>
	</div><!--close left column-->
	<div id="main-section" class="col-md-12 column">
		<!--open main column-->
		@RenderBody()
	</div><!--close main column-->
	@*</div><!--close row-->
		</div><!--close container-->*@
			<script>
				$(document).ready(function () {
					$('[data-toggle=offcanvas]').click(function () {
						$('.row-offcanvas').toggleClass('active');
					});
				});
			</script>
			<style type="text/css">
				@@media screen and (max-width: 480px) {
					#rights {
						visibility: hidden;
						display: none;
					}
				}

				a:link {
					color: #ffffff;
				}
				/* normal link */
				a:visited {
					color: #ffffff;
				}
				/* visited link */
				a:hover {
					color: #ffffff;
				}
				/* mouse over link */
				a:active {
					color: #ffffff;
				}
				/* selected link */
			</style>
</body>
</html>
